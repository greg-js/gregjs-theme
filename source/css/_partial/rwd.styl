// fixed max width
@media (min-width: 1601px)
  #container
    width: 1150px

  #header
    width: 1150px
    margin-left: -575px

// tablet
@media (min-width:768px) and (max-width:1040px)
  #container
    width: 700px

  #header
    width: 700px
    margin-left: -350px

  #main-page
  #main
    padding-left: 0

  .entry-meta-header
    position: static
    width: auto
    height: 4rem
    .meta-elements
      display: inline
      margin-right: 1em
    .commentscount
      display: none
  .category-tags
    margin-top: 1em;
    .category
      float: right
    .article-tag-list-item
      display: inline

  .page
  .post
    font-size: 100%
    .entry-title
      font-size: 180%
  .meta-separator
    display: none

// Mobile
@media (max-width:767px)
  .meta-separator
    display: none
  #container
    margin-top: 0
    width: 93.75%
    word-wrap: break-word

  .mobile-nav-panel
    display: block

  .nav
    height: 0
    width: 100%
    overflow: hidden
    margin: 0
    position: absolute
    top: 45px
    left: 0
    background-color: #4f5759
    &.active
      height: auto
      overflow: visible
      transition: all .2s ease-out
      z-index: 2
    ul
      li
        display: block
        width: 100%
        margin: 0
        a
          display: block
          border: none
          padding: 1em .5em
          color: #fff
          border-bottom: 1px solid #677174
          text-align: left

  .submenu
    display: none !important
    position: relative
    background: #4f5759
    top: 0
    border: none
    a
      padding: 0.3em 1.5em !important
    &.active
      display: block !important
      overflow: visible
      transition: all .2s ease-out
    span:first-child
      display: none
    li:hover
        background: #4f5759

  #header
    width: 100%
    margin: 0.75em 0 2em 0
    padding-bottom:1em
    text-align: center
    position: static

  .blog-title
    float: none

  #main-page
  #main
    padding-left: 0
    margin-bottom: 3em

  .entry-meta-header
    position: static
    width: auto
    .meta-elements
      display: inline
      margin-right: 1em

  .category-tags
    margin-top: 1em
    .category
      float: right
    .article-tag-list-item
      display: inline

  .post
  .page
    font-size: 90%
    .entry-title
      font-size: 180%
    .entry-content
      line-height: 1.8
      blockquote
        margin: 1em 0
      table th, table td
        word-break: break-all
      iframe
        width: 100% !important

  .pagination span,.pagination a
    padding: 5px
    margin: 0

  .front-table-date
    display: none
  .front-table-category
    color: color-default !important
